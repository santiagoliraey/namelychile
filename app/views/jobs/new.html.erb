<div class="row">

  <div class="col-sm-4">
    <h1>Add a New Job</h1>
  </div>
  <div class="col-sm-4">

    <%= bootstrap_form_for(@job) do |form| %>

      <%= form.text_field :name %>
      <%= form.date_field :enroll, label: "Enrollment Date" %>
      <%= form.collection_select :division_id, Division.all, :id, :name, label: "Division" %>
      <%= form.collection_select :department_id, Department.all, :id, :name, label: "Department" %>
      <div class="form-group">
        <%= form.select :healthplan, (options_for_select ["Aetna","Bluecross","Unicare","Wellpoint","Concordia"]) %> 
      </div>
      <%= form.number_field :grosswage, label: "Monthly Gross Wage" %>
      <%= form.submit class: 'btn btn-success'%>

      or
      
      <%= link_to "Cancel", "/employees" %>
    <% end %>

</div>
</div>